<h1>Statistics page</h1>
<p>Find me in app/views/static_pages/help.html.erb</p>
<p>subjects count = <%= current_user.subjects.count %></p>
<% current_user.subjects.each do  |subj| %>
  <%= "#{subj.name} count = #{subj.marks.count}" %></p>
  <% get_month_count(subj.marks).each_pair do |month, val| %>
    <%= "#{month} count = #{val}" %>
  <% end %>
<% end %>


