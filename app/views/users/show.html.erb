<% provide(:title, @user.name) %>
<% if signed_in? %>
  <div class="container">
    <div class="row">
      <div class="span3">
        <section>
          <%= render 'shared/subject_form' %>
        </section>
        <% if have_subject?(@user) %>
          <div id="select_subject">
            <%= render 'shared/subject' %>
          </div>
        <% end %>
        <div id="save_mark_message">
          <%= render 'shared/save_mark_message' %>
        </div>
        <%= render 'shared/mark_form' %>
        <%= hidden_field_tag 'debug_text' ,  date_infos(@user) %>
        <div id="delete_subject">
          <%= render 'shared/delete_subject' %>
        </div>
      </div>
      <div id="calendar_space" class="span9">
        <%= render 'shared/calendar' %>
      </div>
    </div>
  </div>
<% end %>


